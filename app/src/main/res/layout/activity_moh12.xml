<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_moh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/colormain"
        >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="斗牛游戏"
                      android:layout_centerInParent="true"
                      android:textSize="16sp"
                      android:textColor="#ffffff"
                      android:id="@+id/tv_title"
            />
            <TextView
                android:id="@+id/tv_sq"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="授权"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="@color/colorbwhrit"
                        android:layout_marginTop="20dp"
                        android:layout_height="30dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="12dp"
                      android:text="选择类型"
                      android:textColor="@color/colorblack"
                      android:layout_centerVertical="true"
            />
            <TextView

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_frame"
                android:paddingTop="5dp"
                android:layout_marginRight="60dp"
                android:paddingBottom="5dp"
                android:minWidth="200dp"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:paddingLeft="8dp"
                android:textColor="@color/colorblack"
                android:layout_marginLeft="12dp"
                android:id="@+id/tv_xzlx"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:background="@color/colorbwhrit"
                        android:layout_marginTop="1dp"
                        android:layout_height="30dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="12dp"
                      android:layout_centerVertical="true"
                      android:text="授权码"
                      android:textColor="@color/colorblack"
            />
            <EditText android:layout_width="wrap_content"
                      android:layout_height="200dp"
                      android:background="@drawable/shap_frame"
                      android:paddingTop="5dp"
                      android:paddingBottom="5dp"
                      android:textSize="12sp"
                      android:paddingLeft="8dp"
                      android:layout_marginRight="60dp"
                      android:layout_alignParentRight="true"
                      android:textColor="@color/colorblack"
                      android:hint="请输入您的游戏ID"
                      android:minWidth="200dp"
                      android:layout_alignParentTop="true"
                      android:layout_centerHorizontal="true"
                      android:id="@+id/editText"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:background="@color/colorbwhrit"
                        android:layout_marginTop="12dp"
                        android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_ks_cp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="透视"
                android:textColor="@color/colorblack"
            />
            <com.rex.moh.view.ToggleButton
                android:id="@+id/bv_btn1"
                android:layout_width="42dp"
                android:layout_height="25dp"
                toggle:tbOffColor="#ddd"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/tv_ks_cp1"
                android:layout_toRightOf="@+id/tv_ks_cp1"
                android:layout_marginLeft="18dp"
                android:layout_toEndOf="@+id/tv_ks_cp1"/>


        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:background="@color/colorbwhrit"
                        android:layout_marginTop="12dp"
                        android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_ks_cp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="庄家模式"
                android:textColor="@color/colorblack"
            />
            <com.rex.moh.view.ToggleButton
                android:id="@+id/bv_btn3"
                android:layout_width="42dp"
                android:layout_height="25dp"
                toggle:tbOffColor="#ddd"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/tv_ks_cp2"
                android:layout_toRightOf="@+id/tv_ks_cp2"
                android:layout_marginLeft="18dp"
                android:layout_toEndOf="@+id/tv_ks_cp2"/>
            <com.rex.moh.view.ToggleButton
                android:id="@+id/bv_btn4"
                android:layout_width="42dp"
                android:layout_centerVertical="true"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                toggle:tbOffColor="#ddd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="闲家模式"
                android:textColor="@color/colorblack"
                android:layout_alignTop="@+id/bv_btn3"
                android:layout_toLeftOf="@+id/bv_btn4"
                android:layout_toStartOf="@+id/bv_btn4"
                android:layout_marginRight="12dp"
                android:id="@+id/textView3"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:background="@color/colorbwhrit"
                        android:layout_marginTop="12dp"
                        android:layout_height="40dp">
            <com.rex.moh.view.ToggleButton
                android:id="@+id/bv_btn5"
                android:layout_width="42dp"
                android:layout_height="25dp"
                toggle:tbOffColor="#ddd"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/tv_ks_cp3"
                android:layout_toRightOf="@+id/tv_ks_cp3"
                android:layout_marginLeft="18dp"
                android:layout_toEndOf="@+id/tv_ks_cp3"/>
            <com.rex.moh.view.ToggleButton
                android:id="@+id/bv_btn6"
                android:layout_width="42dp"
                android:layout_centerVertical="true"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                toggle:tbOffColor="#ddd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5花牛"
                android:textColor="@color/colorblack"
                android:layout_alignTop="@+id/bv_btn6"
                android:layout_toLeftOf="@+id/bv_btn6"
                android:layout_toStartOf="@+id/bv_btn6"
                android:layout_marginRight="12dp"
                android:id="@+id/textView4"/>
            <TextView
                android:id="@+id/tv_ks_cp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="5小牛"
                android:textColor="@color/colorblack"
                android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_marginStart="11dp"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:background="@color/colorbwhrit"
                        android:layout_marginTop="12dp"
                        android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_ks_cp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="满牛"
                android:textColor="@color/colorblack"
            />
            <com.rex.moh.view.ToggleButton
                android:id="@+id/bv_btn7"
                android:layout_width="42dp"
                android:layout_height="25dp"
                toggle:tbOffColor="#ddd"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/tv_ks_cp5"
                android:layout_toRightOf="@+id/tv_ks_cp5"
                android:layout_marginLeft="18dp"
                android:layout_toEndOf="@+id/tv_ks_cp5"/>
            <com.rex.moh.view.ToggleButton
                android:id="@+id/bv_btn8"
                android:layout_width="42dp"
                android:layout_centerVertical="true"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                toggle:tbOffColor="#ddd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="牛牛"
                android:textColor="@color/colorblack"
                android:layout_marginRight="12dp"
                android:id="@+id/textView5" android:layout_alignTop="@+id/bv_btn8"
                android:layout_toLeftOf="@+id/bv_btn8" android:layout_toStartOf="@+id/bv_btn8"
                android:layout_marginEnd="12dp"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:background="@color/colorbwhrit"
                        android:layout_marginTop="12dp"
                        android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_ks_cp9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="牛9"
                android:textColor="@color/colorblack"
            />
            <com.rex.moh.view.ToggleButton
                android:id="@+id/bv_btn9"
                android:layout_width="42dp"
                android:layout_height="25dp"
                toggle:tbOffColor="#ddd"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/tv_ks_cp9"
                android:layout_toRightOf="@+id/tv_ks_cp9"
                android:layout_marginLeft="18dp"
                android:layout_toEndOf="@+id/tv_ks_cp9"/>
            <com.rex.moh.view.ToggleButton
                android:id="@+id/bv_btn10"
                android:layout_width="42dp"
                android:layout_centerVertical="true"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                toggle:tbOffColor="#ddd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="牛8"
                android:textColor="@color/colorblack"
                android:layout_alignTop="@+id/bv_btn10"
                android:layout_toLeftOf="@+id/bv_btn10"
                android:layout_toStartOf="@+id/bv_btn10"
                android:layout_marginRight="12dp"
                android:id="@+id/textView7"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:background="@color/colorbwhrit"
                        android:layout_marginTop="12dp"
                        android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_ks_cp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="牛7"
                android:textColor="@color/colorblack"
            />
            <com.rex.moh.view.ToggleButton
                android:id="@+id/bv_btn11"
                android:layout_width="42dp"
                android:layout_height="25dp"
                toggle:tbOffColor="#ddd"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/tv_ks_cp"
                android:layout_toRightOf="@+id/tv_ks_cp"
                android:layout_marginLeft="18dp"
                android:layout_toEndOf="@+id/tv_ks_cp"/>
            <com.rex.moh.view.ToggleButton
                android:id="@+id/bv_btn12"
                android:layout_width="42dp"
                android:layout_centerVertical="true"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                toggle:tbOffColor="#ddd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="牛6"
                android:textColor="@color/colorblack"
                android:layout_alignTop="@+id/bv_btn12"
                android:layout_toLeftOf="@+id/bv_btn12"
                android:layout_toStartOf="@+id/bv_btn12"
                android:layout_marginRight="12dp"
                android:id="@+id/textView2"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:background="@color/colorbwhrit"
                        android:layout_marginTop="12dp"
                        android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_ks_cp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="牛5"
                android:textColor="@color/colorblack"
            />
            <com.rex.moh.view.ToggleButton
                android:id="@+id/bv_btn13"
                android:layout_width="42dp"
                android:layout_height="25dp"
                toggle:tbOffColor="#ddd"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/tv_ks_cp12"
                android:layout_toRightOf="@+id/tv_ks_cp12"
                android:layout_marginLeft="18dp"
                android:layout_toEndOf="@+id/tv_ks_cp12"/>
            <com.rex.moh.view.ToggleButton
                android:id="@+id/bv_btn14"
                android:layout_width="42dp"
                android:layout_centerVertical="true"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                toggle:tbOffColor="#ddd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="防透视"
                android:textColor="@color/colorblack"
                android:layout_alignTop="@+id/bv_btn14"
                android:layout_toLeftOf="@+id/bv_btn14"
                android:layout_toStartOf="@+id/bv_btn14"
                android:layout_marginRight="12dp"
                android:id="@+id/textView"/>

        </RelativeLayout>
        <TextView android:layout_width="match_parent"
                  android:layout_marginTop="3dp"
                  android:layout_marginBottom="3dp"
                  android:layout_marginLeft="12dp"
                  android:textColor="#000"
                  android:text="注：打开以上功能，系统会随机匹配，可多开"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:background="@drawable/shap_checked"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:paddingTop="8dp"
                  android:paddingRight="10dp"
                  android:paddingLeft="10dp"
                  android:layout_marginTop="20dp"
                  android:paddingBottom="8dp"
                  android:id="@+id/tv_sart"
                  android:textColor="@color/colormain"
                  android:layout_marginBottom="15dp"
                  android:text="启动游戏"
        />
</LinearLayout>
    </ScrollView>
